{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Attach to Docker Compose",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/src/app",
          "remoteRoot": "."
        }
      ],
      "justMyCode": false
    },
    {
      "name": "Python Debugger: Script",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": false
    }
  ]
}
